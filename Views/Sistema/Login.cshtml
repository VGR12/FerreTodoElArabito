@model FT.Lib.Data.Models.LogIn.LogInModel

@{
    Layout = "/Views/Shared/_LayoutLogIn.cshtml";
    ViewData["Title"] = "Ingresar";
}


<div class="container">

    <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                    <div class="d-flex justify-content-center py-4">
                        <a href="index.html" class="logo d-flex align-items-center w-auto">
                            <img src="assets/img/logo.png" alt="">
                            <span class="d-none d-lg-block">¡Bienvenido!</span>
                        </a>
                    </div><!-- End Logo -->

                    <div class="card mb-3">

                        <div class="card-body">

                            <div class="pt-4 pb-2">
                                <h5 class="card-title text-center pb-0 fs-4">Credenciales del sistema</h5>
                                <p class="text-center small">Ingrese su usuario y contraseña para utilizar la herramienta</p>
                            </div>
                            @using (Html.BeginForm("Ingresar", "Sistema", FormMethod.Post))
                            {

                                @* <form class="row g-3 needs-validation" novalidate> *@

                                <div class="col-12">
                                    @Html.LabelFor(t => t.Username, "Usuario:", new { @class = "form-label" })
                                    <div class="input-group has-validation">
                                        <span class="input-group-text"><i class="bi bi-person"></i></span>
                                        @Html.TextBoxFor(t => t.Username, new { @class = "form-control", placeholder = "habarca23" })
                                        @Html.ValidationMessageFor(t => t.Username)
                                    </div>
                                </div>

                                <div class="col-12 mt-2">
                                    @Html.LabelFor(t => t.Password, "Contraseña:", new { @class = "form-label" })
                                    @Html.TextBoxFor(t => t.Password, new { @class = "form-control"})
                                    @Html.ValidationMessageFor(t => t.Password)
                                </div>

                                <div class="col-12 mt-2">
                                    <div class="form-check">
                                        @Html.LabelFor(t => t.Recordar, "Recordar:", new { @class = "form-check-label", @value = "true" })
                                        @Html.CheckBoxFor(t => t.Recordar, new { @class = "form-check-input" })
                                    </div>
                                </div>

@*                                 <div class="col-12">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="remember" value="true" id="rememberMe">
                                        <label class="form-check-label" for="rememberMe">Recordar</label>
                                    </div>
                                </div> *@
                                <div class="col-12 mt-3">
                                    <button class="btn btn-primary w-100" type="submit">Ingresar</button>
                                </div>
                                <div class="col-12 mt-2">
                                    <p class="small mb-0">Aun no tienes cuenta? <a href="pages-register.html">Crear una cuenta</a></p>
                                </div>
                                @* </form> *@
                            }

                        </div>
                    </div>

                </div>
            </div>
        </div>

    </section>

</div>